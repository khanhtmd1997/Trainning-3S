@model AddUserViewModel
@using TaskTranning.Resources
@using TaskTranning.ViewModels
@inject ResourcesServices<UserResource> Localizer
@inject ResourcesServices<CommonResource> CommonLocalizer

@{
    ViewBag.Title = Localizer.GetLocalizedHtmlString("lbl_TitleCreateUser");
    Layout = "_NavbarDataTable";
}
<div class="formbody">
    <h1>@Localizer.GetLocalizedHtmlString("lbl_TitleCreateUser")</h1>
    <div id="form">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_Email") * :</label>
                <input asp-for="Email" type="email" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("lbl_PlaceholderEmail")/>
                <span asp-validation-for="Email" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_Password") * :</label>
                <input asp-for="PassWord" type="password" class="form-control"placeholder=@Localizer.GetLocalizedHtmlString("lbl_PlaceholderPassword")/>
                <span asp-validation-for="PassWord" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_FullName") * :</label>
                <input asp-for="FullName" type="text" class="form-control"placeholder=@Localizer.GetLocalizedHtmlString("lbl_PlaceholderFullName")/>
                <span asp-validation-for="FullName" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_Phone") * :</label>
                <input type="number" asp-for="Phone" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("lbl_PlaceholderPhone")/>
                <span asp-validation-for="Phone" class="form-text text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label>@Localizer.GetLocalizedHtmlString("lbl_Picture") * :</label> *@
            @*     <input type="file" asp-for="PictureFile"> *@
            @*     <span asp-validation-for="PictureFile" class="form-text text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_Address") * :</label>
                <input type="text" asp-for="Address" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("lbl_PlaceholderAddress")/>
                <span asp-validation-for="Address" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_StoreName") * :</label>
                <select asp-for="StoreId" asp-items="@ViewBag.StoreId" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_RoleName") * :</label>
                @* <select asp-for="Role" asp-items="Html.GetEnumSelectList<AddUserViewModel.RoleName>()" class="form-control"></select> *@
                <select asp-for="Role" class="form-control">
                    <option value="1">Admin</option>
                    <option value="2">User</option>
                </select>
                <span asp-validation-for="Role" class="form-text text-danger"></span>
            </div>
            <div>
                <label>@Localizer.GetLocalizedHtmlString("lbl_IsActive"):</label>
                <input asp-for="IsActive" type="checkbox"  class="form-control">
                <span asp-validation-for="IsActive" class="form-text text-danger"></span>
            </div>
            <div class="container">
                <div class="row button">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary">@CommonLocalizer.GetLocalizedHtmlString("btn_Create")</button>
                    </div>
                </div>
            </div>
    
        </form>
        <div class="list-group link">
            <a class="text-primary" asp-action="Index">@CommonLocalizer.GetLocalizedHtmlString("btn_Back")</a>
        </div>
    </div>
</div>
