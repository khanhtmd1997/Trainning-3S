@model CategoryViewModel
@using TaskTranning.Resources
@using TaskTranning.ViewModels
@inject ResourcesServices<CategoryResource> Localizer
@inject ResourcesServices<CommonResource> CommonLocalizer
@{
    ViewBag.Title = Localizer.GetLocalizedHtmlString("lbl_TitleEditCateogory");
    Layout = "_NavbarDataTable";
}
<div class="formbody">
    <h1>@Localizer.GetLocalizedHtmlString("lbl_TitleEditCateogory")</h1>
    <div id="form">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label>@Localizer.GetLocalizedHtmlString("lbl_CategoryName") * :</label>
                <input asp-for="CategoryName" type="text" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("lbl_PlaceholderCategoryName")/>
                <span asp-validation-for="CategoryName" class="form-text text-danger"></span>
            </div>
            <div class="container">
                <div class="row button">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary">@CommonLocalizer.GetLocalizedHtmlString("btn_Edit")</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="list-group link">
            <a class="text-primary" asp-action="Index">@CommonLocalizer.GetLocalizedHtmlString("btn_Back")</a>
        </div>
    </div>
</div>